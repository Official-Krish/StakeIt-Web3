generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model nft {
  id          BigInt   @id @default(autoincrement())
  name        String
  description String?
  symbol      String?
  uri         String
  pointPrice  BigInt
  BasePrice   BigInt
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownerId     String?
  owner       user?    @relation(fields: [ownerId], references: [PublicKey])
}

model user {
  id        String   @id @default(cuid())
  name      String?
  PublicKey String   @unique
  StakedSol Int @default(0)
  NftsOwned  nft[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}